[Unit]
Description = DCAudio Dual Displays management
After = mpd.service 

[Service]
Restart = always
WorkingDirectory = /home/pi/pydPiper
ExecStart = /home/pi/pydPiper/start_displays_manager.sh
ExecReload = /usr/bin/kill -HUP $MAINPID
KillMode = process
Restart = always
RestartSec = 10
StartLimitInterval = 30
StartLimitBurst = 20

[Install]
WantedBy = multi-user.target

